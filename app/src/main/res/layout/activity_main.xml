<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@color/layout_background"
    >

    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/by_school_btn"/>

    <android.widget.Button
        android:id="@+id/by_school_btn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/by_school_btn_txt"
        android:textSize="30sp"
        android:fontFamily="@font/bazzi"
        android:textFontWeight="700"
        android:background="@drawable/custom_btn_shape"
        app:layout_constraintTop_toBottomOf="@+id/logo_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/by_self_btn"
        />

    <android.widget.Button
        android:id="@+id/by_self_btn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/by_self_btn_txt"
        android:textSize="30sp"
        android:fontFamily="@font/bazzi"
        android:textFontWeight="700"
        android:background="@drawable/custom_btn_shape"
        app:layout_constraintTop_toBottomOf="@+id/by_school_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>